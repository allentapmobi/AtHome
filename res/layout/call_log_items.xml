<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_background"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/sort_by_date"
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:background="#e4e4e4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sort_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/theme_text"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/sort_by_date"
        android:background="@drawable/def_contact"
        android:contentDescription="@string/app_name" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_by_date"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/thumb"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Contact Name"
            android:textColor="@color/theme_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCallType"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/txtContactName"
            android:src="@drawable/incoming" />

        <TextView
            android:id="@+id/txtContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtContactName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivCallType"
            android:padding="2dp"
            android:text="+919863492364"
            android:textColor="@color/theme_sub_header_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtCallTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtContactName"
            android:padding="1dp"
            android:text="2 mins ago"
            android:textColor="@color/theme_sub_header_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCallCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txtCallTime"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(1)"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>